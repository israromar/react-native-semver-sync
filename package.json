{
  "name": "react-native-semver-sync",
  "version": "0.1.1",
  "description": "Semantic versioning and build number synchronization for React Native iOS and Android projects",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "bin": {
    "react-native-semver": "./lib/module/cli.js",
    "rn-semver": "./lib/module/cli.js"
  },
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "example": "yarn workspace react-native-semver-sync-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "postinstall": "node ./lib/module/postinstall.js",
    "release": "release-it --only-version",
    "version:patch": "rn-semver patch",
    "version:minor": "rn-semver minor",
    "version:major": "rn-semver major",
    "version:sync": "rn-semver sync"
  },
  "keywords": [
    "react-native",
    "semantic-versioning",
    "semver",
    "ios",
    "android",
    "build-number",
    "version-sync",
    "mobile",
    "development-tools",
    "cli",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/israromar/react-native-semver-sync.git"
  },
  "author": "Israr khan <iisraromar@gmail.com> (https://github.com/israromar)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/israromar/react-native-semver-sync/issues"
  },
  "homepage": "https://github.com/israromar/react-native-semver-sync#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.12",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^19.0.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "glob": "^10.3.10"
  },
  "peerDependencies": {},
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.54.3"
  }
}
